@model IEnumerable<DepartmentViewModel>


<h1>All Departments</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Add The Department</a>
<br />
<br />

@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x => x.Code)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>@Html.DisplayNameFor(x => x.DateofCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.DateofCreation</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Department" asp-action="Details" asp-route-id="@item.Id"> Details </a> 
                       
                    <td>
                        <a class="btn btn-warning" asp-controller="Department" asp-action="Update" asp-route-id="@item.Id">Update</a>
                        </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else{
    <h2> NO DEPARTMENT FOUND! </h2>
}
