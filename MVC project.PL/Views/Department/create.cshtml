@model DepartmentViewModel
<div class="row">

    <div class="col-6">

        <form asp-action="Create" asp-controller="Department">
            <div class="form-group">
                <label asp-for="@Model.Code" class="col-from-lable"></label>
                <input asp-for="@Model.Code" class="form-control" />
                <span asp-validation-for="@Model.Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="col-from-lable"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DateofCreation" class="col-from-lable"></label>
                <input asp-for="@Model.DateofCreation" class="form-control" />
                <span asp-validation-for="@Model.DateofCreation" class="text-danger"></span>
            </div>
            <br />
            
            <input type="submit" value="Add" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back to list</a>
        </form>
    </div>
</div>


@section validationScriptSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
