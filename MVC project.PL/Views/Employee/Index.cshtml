@model IEnumerable<EmployeeViewModel>


<h1>All Employees</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Add The Employee</a>
<br />
<br />
 <form asp-action="Index" class="m-3">
        <div class="row">
         
         <div class="col-8">
            <input type="text" name="search" id="search" class="form-control" placeholder="Search ..." />
         </div>
           <div class="col-4">
            <input type="submit" value="search" class="btn btn-success" />
           </div>
        </div>
 </form>


@if (Model?.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>@Html.DisplayNameFor(e => e.Age)</th>
                <th>@Html.DisplayNameFor(e => e.Address)</th>
                <th>@Html.DisplayNameFor(e => e.Salary)</th>
                <th>@Html.DisplayNameFor(e => e.Email)</th>
                <th>@Html.DisplayNameFor(e => e.Department)</th>                
                <th>@Html.DisplayNameFor(e => e.IsActive)</th> 
                <th>@Html.DisplayNameFor(e => e.DateOfCreation)</th>                
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Address</td>
                    <td>@item.Salary</td>
                    <td>@item.Email</td>
                    <td>@item?.Department?.Name</td>
                    <td>@item.IsActive</td>
                    <td>@item.DateOfCreation</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id"> Details </a>

                    <td>
                        <a class="btn btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h2> No Employees Created! </h2>
}

