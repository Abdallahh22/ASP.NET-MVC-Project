@model EmployeeViewModel
@{
    // ViewData["Title"] = "Create";
    var Departments = new SelectList(ViewBag.Departments, "Id", "Name");
}

<div class="form-group">
    <label asp-for="@Model.Name" class="col-from-lable"></label>
    <input asp-for="@Model.Name" class="form-control" />
    <span asp-validation-for="@Model.Name" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Age" class="col-from-lable"></label>
    <input asp-for="@Model.Age" class="form-control" />
    <span asp-validation-for="@Model.Age" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Address" class="col-from-lable"></label>
    <input asp-for="@Model.Address" class="form-control" />
    <span asp-validation-for="@Model.Address" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Salary" class="col-from-lable"></label>
    <input asp-for="@Model.Salary" class="form-control" />
    <span asp-validation-for="@Model.Salary" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.Email" class="col-from-lable"></label>
    <input asp-for="@Model.Email" class="form-control" />
    <span asp-validation-for="@Model.Email" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.DateOfCreation" class="col-from-lable"></label>
    <input asp-for="@Model.DateOfCreation" class="form-control" />
    <span asp-validation-for="@Model.DateOfCreation" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="@Model.DepartmentId" class="col-from-lable"></label>
    <select asp-for="@Model.DepartmentId" asp-items="Departments">
        <option>----- Select Department -----</option>
    </select>
    <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" />
    <label asp-for="@Model.IsActive" class="form-check-lable"></label>
</div>
